<div class="dashboard-container">
  <div class="main-content bg-light">
    <!-- Courses Content -->
    <div class="courses-content p-4">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h4 class="mb-1">Courses</h4>
          <p class="text-muted mb-0">Browse and manage your courses</p>
        </div>  
        <% if current_user.instructor? %>
          <%= link_to new_course_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i>Create New Course
          <% end %>
        <% end %>
      </div>

      <!-- View Options -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="view-filters">
          <%= link_to "All Courses", courses_path, class: "btn btn-outline-secondary #{params[:status].nil? ? 'active' : ''} me-2", data: { remote: true } %>
          <%= link_to "Active", courses_path(status: 'active'), class: "btn btn-outline-secondary #{params[:status] == 'active' ? 'active' : ''} me-2", data: { remote: true } %>
          <%= link_to "Closed", courses_path(status: 'closed'), class: "btn btn-outline-secondary #{params[:status] == 'closed' ? 'active' : ''} me-2", data: { remote: true } %>
        </div>
        <div class="view-options">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-secondary active">
              <i class="fas fa-th-large"></i>
            </button>
            <button type="button" class="btn btn-outline-secondary">
              <i class="fas fa-list"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Courses Grid -->
      <div class="row g-4">
        <%= render partial: "courses", locals: { courses: @courses } %>
      </div>
    </div>
  </div>
</div>

